{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react",
    "jsxFactory": "wp.element.createElement",
    "jsxFragmentFactory": "wp.element.Fragment",
    "strict": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "types": ["react", "react-dom", "node"],
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx", "types/wp.d.ts"]
}
