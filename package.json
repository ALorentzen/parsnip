{
  "name": "parsnip",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail -n TAILWIND,VITE -c auto \"pnpm exec tailwindcss -i assets/css/input.css -o dist/theme.css --watch --poll\" \"pnpm exec vite build --watch --emptyOutDir=false\"",
    "build": "pnpm exec vite build && pnpm exec tailwindcss -i assets/css/input.css -o dist/theme.css --minify",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@prettier/plugin-php": "^0.24.0",
    "@tailwindcss/cli": "^4.1.14",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@types/wordpress__block-editor": "^11.5.17",
    "@types/wordpress__blocks": "^12.5.18",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-full-reload": "^1.2.0",
    "vite-plugin-static-copy": "^3.1.3"
  },
  "dependencies": {
    "@wordpress/block-editor": "^15.5.0",
    "@wordpress/blocks": "^15.5.0",
    "@wordpress/components": "^30.5.0",
    "@wordpress/element": "^6.32.0",
    "@wordpress/i18n": "^6.5.0",
    "classnames": "^2.5.1",
    "parsnip": "link:",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "pnpm": {
    "overrides": {
      "yallist": "3.1.1"
    }
  },
  "lint-staged": {
    "*.{php,js,ts,tsx,css}": "prettier --write"
  },
  "prettier": {
    "plugins": [
      "@prettier/plugin-php"
    ],
    "phpVersion": "8.3",
    "printWidth": 100,
    "tabWidth": 2
  }
}
